<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackgroundFloating"
    android:orientation="vertical"

    tools:context="com.gaparmar.traq.MainActivity">


    <Button
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:id="@+id/button5"
        android:gravity="fill_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/ic_menu_home"

        android:layout_height="0dp"
        android:layout_weight=".2"
        android:background="#7DD7AC"
        android:fontFamily="sans-serif"
        android:text="Name"
        android:textColor="#ffffff"
        android:textSize="40sp" />


    <Button
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/iconTime"
        android:layout_width="match_parent"
        android:drawableTop = "@drawable/ic_menu_recent_history2"

        android:layout_height="0dp"
        android:layout_weight=".2"
        android:background="#7DD7AC"
        android:fontFamily="sans-serif"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/timeBut"
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_weight=".2"
        android:background="#7DD7AC"
        android:text="Backpack"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/locIcon"
        android:layout_width="match_parent"
        android:drawableTop="@drawable/ic_menu_mylocation2"

        android:layout_height="0dp"
        android:layout_weight=".2"
        android:background="#BC86D4"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/locBut"
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_weight=".2"
        android:background="#BC86D4"
        android:text="Wallet"
        android:textColor="#ffffff"
        android:textSize="30sp" />


</LinearLayout>

